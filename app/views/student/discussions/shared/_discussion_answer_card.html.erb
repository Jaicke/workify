<div class="mt-3 header">
  <div class="info">
    <span data-toggle="popover" data-placement="top" data-html="true" data-trigger='hover click' data-content="<%= "#{render 'layouts/shared/user_popover', user: answer.created_by}"%>">
      <%= image_tag url_for_profile_image(answer.created_by), class: "header-profile-image", style: 'cursor: pointer;' %>
      <strong><%= answer.created_by.label_name %></strong>
    </span>
    <span data-toggle="tooltip" data-placement="top", title="<%= "#{answer.created_at.strftime("%d/%m/%Y")} às #{ answer.created_at.strftime("%H:%M")}" %>">
      há
      <%= time_ago_in_words(answer.created_at) %>
    </span>
  </div>

  <div class="actions">
    <% if answer.created_by == @current_user %>
      <li class="nav-item dropdown">
        <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-display="static" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false" data-placement="top">
          <%= icon("fas", "ellipsis-h") %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
          <%= nav_dropdown_item "Editar", edit_student_discussion_discussion_answer_path(id: answer.id, work_id: @work.id, discussion_id: @discussion.id), 'pen', remote: true %>
          <%= link_to student_discussion_discussion_answer_path(id: answer.id, work_id: @work.id, discussion_id: @discussion.id), method: :delete, class: "dropdown-item", data: { confirm: "Tem certeza que deseja remover?" } do %>
            <%= icon("fas", "trash") %> Remover
          <% end %>
        </div>
      </li>
    <% end %>
  </div>
</div>

<div class="content">
  <%= answer.content %>

  <% if @discussion.created_by == @current_user %>
    <% if answer.favorite? %>
      <%= link_to toggle_favorite_student_discussion_discussion_answer_path(id: answer.id, work_id: @work.id, discussion_id: @discussion.id) do %>
        <span data-toggle="tooltip" data-placement="top" title="Desmarcar como favorito">
            <%= icon("fas", "star", class: "star-check") %>
        </span>
      <% end %>
    <% end %>

    <% unless answer.favorite? %>
      <%= link_to toggle_favorite_student_discussion_discussion_answer_path(id: answer.id, work_id: @work.id, discussion_id: @discussion.id) do %>
        <span data-toggle="tooltip" data-placement="top" title="Marcar como favorito">
            <%= icon("far", "star", class: "star-uncheck") %>
        </span>
      <% end %>
    <% end %>
  <% else %>
    <span data-toggle="tooltip" data-placement="top" title="Favorito">
      <%= icon("fas", "star", class: "star-check") if answer.favorite? %>
    </span>
    <%= icon("far", "star", class: "star-uncheck") unless answer.favorite? %>
  <% end %>
</div>
