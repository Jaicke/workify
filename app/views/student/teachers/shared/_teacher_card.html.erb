<div class="user-card">
  <div class="avatar">
    <%= link_to student_teacher_path(teacher) do %>
      <%= image_tag url_for_profile_image(teacher), loading: "lazy" %>
    <% end %>
  </div>

  <div class="info">
    <span class="user-name"><%= teacher.label_name %></span>
    <span class="user-email"><%= teacher.email %></span>
  </div>

  <div class="button">
    <%= teacher_card_button_type(teacher.id) %>
  </div>
</div>
