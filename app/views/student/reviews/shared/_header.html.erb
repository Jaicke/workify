<div class="row list-header mb-3">
  <div class="col-md-10 col-sm-12 mb-3">
    <%= form_tag student_reviews_path(work_id: @work.id), autocomplete: :off, method: :get, remote: true do %>
      <%= text_field_tag 'search', params[:search], placeholder: "Pesquisar", class: "form-control col-sm-12 col-12 col-md-12 search-input" %>
    <% end %>
  </div>

  <div class="col">
    <% if @work.reviews.open.empty? %>
      <%= link_to new_student_review_path(work_id: @work.id), class: 'btn btn-success col-sm-12' do %>
        Nova Revisão
      <% end %>
    <% else %>
      <span title="Revisão ainda aberta!" data-toggle="tooltip">
        <button type="button" class="btn btn-success col-sm-12" style="pointer-events: none;" disabled>Nova Revisão</button>
      </span>
    <% end %>
  </div>
</div>
