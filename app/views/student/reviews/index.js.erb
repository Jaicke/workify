var reviews = document.querySelector(".review-list");
var pagination = document.querySelector(".info-pagination");

reviews.innerHTML = "";
pagination.innerHTML = "";

pagination.insertAdjacentHTML("beforeend", "<%= j render 'layouts/shared/pagination', items: @reviews %>");

<% @reviews.each do |review| %>
  reviews.insertAdjacentHTML("beforeend", "<%= j render 'review_card', review: review %>");
<% end %>
