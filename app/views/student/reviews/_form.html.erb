<%= form_with(model: @review, url: path, local: false, html: { autocomplete: :off }) do |f| %>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :new_work_version %>
      <%= f.select :new_work_version_id, options_from_collection_for_select(@work_versions, :id, :title, @review.new_work_version_id), { include_blank: true }, class: 'select2 form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="text-right">
    <button type="submit" id="save-profile-btn" class="btn btn-dark">Salvar <%= icon("fas", "arrow-right") %></button>
  </div>
<% end %>
<br>
