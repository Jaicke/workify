<div class="box">
  <div class="content">
    <%= render "header" %>
    <div class="work-list">
      <% @works.each do |work| %>
        <%= render "work_item", work: work %>
      <% end %>
    </div>

    <div class="info-pagination">
      <%= render "layouts/shared/pagination", items: @works %>
    </div>
  </div>
</div>
