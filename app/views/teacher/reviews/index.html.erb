<div class="box">
  <div class="content">
    <%= render 'teacher/works/shared/tabs' %>
    <%= render 'teacher/reviews/shared/header' %>

    <div class="review-list">
      <% @reviews.each do |review| %>
        <%= render 'teacher/reviews/shared/review_card', review: review %>
      <% end %>
    </div>

    <div class="info-pagination">
      <%= render "layouts/shared/pagination", items: @reviews %>
    </div>
  </div>
</div>
