var discussions = document.querySelector(".discussion-list");
var pagination = document.querySelector(".info-pagination");

discussions.innerHTML = "";
pagination.innerHTML = "";

pagination.insertAdjacentHTML("beforeend", "<%= j render 'layouts/shared/pagination', items: @discussions %>");

<% @discussions.each do |discussion| %>
  discussions.insertAdjacentHTML("beforeend", "<%= j render 'teacher/discussions/shared/discussion_card', discussion: discussion %>");
<% end %>
