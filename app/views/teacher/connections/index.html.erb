<div class="box">
  <div class="connect-container">
    <% if @answer == 'accepted' %>
      <%= render "teacher/connections/shared/accepted" %>
    <% elsif @answer == 'declined' %>
      <%= render "teacher/connections/shared/declined" %>
    <% else %>
      <!-- Você já respondeu esse convite! -->
      <%= render "teacher/connections/shared/already_answered" %>
    <% end %>
  </div>
</div>
