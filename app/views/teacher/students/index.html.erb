<div class="box">
  <div class="content">
    <div class="list-header">
      <span>
        Estudantes
      </span>
      <div>
        <%= form_tag teacher_students_path, autocomplete: :off, method: :get, remote: true do %>
          <%= text_field_tag 'search', params[:search], placeholder: "Pesquisar", class: "form-control col-md-12 col-sm-12 col-12 search-input" %>
        <% end %>
      </div>
    </div>
    <br>
    <div class="user-list">
      <% @students.each do |student| %>
        <%= render "teacher/students/shared/student_card", student: student %>
      <% end %>
    </div>

    <div class="info-pagination">
      <%= render "layouts/shared/pagination", items: @students %>
    </div>
  </div>
</div>
