<div class='sign-tabs'>
  <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link left-tab active" id="student-tab" data-toggle="tab" href="#student" role="tab" aria-controls="student" aria-selected="true">Estudante</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link right-tab" id="teacher-tab" data-toggle="tab" href="#teacher" role="tab" aria-controls="teacher" aria-selected="false">Professor</a>
    </li>
  </ul>
</div>

<div class="tab-content" id="signTabContent">
  <div class="tab-pane fade show active" id="student" role="tabpanel" aria-labelledby="student-tab">
    <%= render partial: 'site/shared/sign_in_form', locals: { form_url: student_sessions_path, forgot_password_url: new_student_password_resets_path, prefix: 'student' } %>
  </div>
  <div class="tab-pane fade" id="teacher" role="tabpanel" aria-labelledby="teacher-tab">
    <%= render partial: 'site/shared/sign_in_form', locals: { form_url: teacher_sessions_path, forgot_password_url: new_student_password_resets_path, prefix: 'teacher' } %>
  </div>
</div>
